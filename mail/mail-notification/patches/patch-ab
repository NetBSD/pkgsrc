+
+char *
+mn_vfs_uri_get_basename (const char *text_uri)
+{
+  GnomeVFSURI *uri;
+  char *name;
+
+  g_return_val_if_fail(text_uri != NULL, NULL);
+
+  uri = gnome_vfs_uri_new(text_uri);
+  if (! uri)
+    return NULL;
+
+  name = gnome_vfs_uri_extract_short_name(uri);
+  gnome_vfs_uri_unref(uri);
+
+  return name;
+}

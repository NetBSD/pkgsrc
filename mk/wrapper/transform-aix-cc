# prepend -Wl, to linker arguments commonly passed to the compiler.
case $arg in
-H[0-9]*|-T[0-9]*|-b*)
	arg=-Wl,$arg
	msg_log $wrapperlog "   (transform-aix-cc) to: $arg"
	addtocache=yes
	;;
# AIX ld(1) uses -G to create shared libraries, and we must make sure
# the runtime linker is used.
-shared)
        arg="-Wl,-G -Wl,-brtl"
        msg_log $wrapperlog "   (transform-aix-cc) to: $arg"
        addtocache=yes
        split_arg=yes
        ;;
esac

-           << std::endl;
-        break;
-      case I64:
-        os << "  type: int64 default: "
-           << *(reinterpret_cast<const int64 *>(flag->default_storage))
-           << std::endl;
-        break;
-      case U64:
-        os << "  type: uint64  default: "
-           << *(reinterpret_cast<const uint64 *>(flag->default_storage))
-           << std::endl;

-      break;
-    case D:
-      *reinterpret_cast<double *>(flag->storage) = strtod(v.c_str(), nullptr);
-      break;
-    case S:
-      *reinterpret_cast<string *>(flag->storage) = v;
-      break;
-    default:
-      break;
-  }

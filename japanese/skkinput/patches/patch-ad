+    skkserv_soc = socket(ai->ai_family, ai->ai_socktype, ai->ai_protocol);
+    if (skkserv_soc >= 0 &&
+	connect(skkserv_soc, ai->ai_addr, ai->ai_addrlen) == 0)
+      break;
+    close(skkserv_soc);
+    skkserv_soc = -1;
+  }
+  if (skkserv_soc < 0) {
+    perror(server_name);
+    skkserv_connection_ok = False ;
+    return 1;
+  }

+
+dnl Check for ELF after finding compiler.
+case "X$elf" in
+Xmaybe)
+	if ${CC} -E - -dM </dev/null | grep -q __ELF__; then
+		ELF_SYS=true
+	else
+		ELF_SYS=
+	fi
+	;;

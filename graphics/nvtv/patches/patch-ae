+#else
+static __inline__ u_int8_t
+inb(port)
+	u_int16_t port;
+{
+	u_int8_t r;
+
+	__asm__ __volatile__ ("inb %w1,%0" : "=a" (r) : "Nd" (port));
+
+	return r;
+}
+
+static __inline__ void
+outb(value, port)
+	u_int8_t value;
+	u_int16_t port;
+{
+	__asm__ __volatile__ ("outb %b0,%w1" : : "a" (value), "Nd" (port));
+}
+
+#define OUTB(p,v) outb(v,p)
+#define INB(p) inb(p)

GST_PLUGINS1_TYPE=	base
GST_PLUGINS1_VER=	1.16.1
BUILDLINK_API_DEPENDS.gstreamer1+= gstreamer1>=1.16.1
LICENSE=		gnu-lgpl-v2

# Disable all drivers and features by default.
.for driver in	alsa \
		cdparanoia \
		cocoa \
		freetypetest \
		gio \
		ivorbis \
		libvisual \
		ogg \
		pango \
		theora \
		vorbis \
		x \
		xshm \
		xvideo
CONFIGURE_ARGS+=	--disable-${driver}
.endfor

.include "../../devel/orc/buildlink3.mk"
.include "plugins.mk"

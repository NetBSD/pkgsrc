DISTNAME=	wmx-6
WMX_VERS=	6.0
PKGREVISION=	1
CATEGORIES+=	x11 wm
MASTER_SITES=	http://www.all-day-breakfast.com/wmx/

MAINTAINER=	tech-pkg@NetBSD.org
HOMEPAGE=	http://www.all-day-breakfast.com/wmx/

CONFLICTS+=	wmx-[0-9]* wmx-gnome-[0-9]*

USE_X11BASE=	# defined
USE_GCC_SHLIB=	# defined

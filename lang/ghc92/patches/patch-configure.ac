+  if echo ${RTS_WAYS_STAGE0} | tr ' ' '\n' | grep '^l$' 2>&1 >/dev/null
+  then
+      AC_SUBST(GhcEventLoggingRts, YES)
+  else
+      AC_SUBST(GhcEventLoggingRts, NO)
+  fi
 fi
 

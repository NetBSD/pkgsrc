   for f in path
     next if (/\~$/ =~ f)
     next if (/^\./ =~ File.basename(f))
-    File::install(File.join("lib", f), File.join(destdir, f), 0644, true)
+    FileUtils::install(File.join("lib", f), File.join(destdir, f), :mode => 0644)
   end

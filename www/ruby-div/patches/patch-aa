@@ -30,12 +30,12 @@ def install_rb(srcdir = nil, destdir = $
   for f in dir
     next if f == "."
     next if f == "CVS"
-    File::makedirs(File.join(destdir, f))
+    FileUtils::mkdir_p(File.join(destdir, f))

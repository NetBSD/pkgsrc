+#endif
+#ifdef MSC5
+#include <dos.h>     /* only for binaryopen on device  */
+#endif
+
+#ifndef HAVE_MKDTEMP
+
+char *
+mkdtemp(path)
+	char *path;
+{
+	char *tmppath;
+
+	assert(path != NULL);
+
+	tmppath = malloc(strlen(path));
+	assert(tmppath);
+
+	for (;;)
+	{
+		/* Reset string */
+		strcpy(tmppath, path);
+
+		if (!mktemp(tmppath))
+		{
+			free(tmppath);
+			return NULL;
+		}
+
+		if (!mkdir(tmppath, 0700))
+		{
+			/* Write back to user buffer. */
+			strcpy(path, tmppath);
+			free(tmppath);
+			return path;
+		}
+
+		if (errno != EEXIST)
+		{
+			free(tmppath);
+			return NULL;
+		}
+	}
+
+	return NULL; /* Not reached */
+}
+
+#endif /* !HAVE_NBTOOL_CONFIG_H || !HAVE_MKDTEMP */

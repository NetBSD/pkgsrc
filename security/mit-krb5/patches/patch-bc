+#define MAXPRINCLEN 125
+
+void
+trunc_name(size_t *len, char **dots)
+{
+	*dots = *len > MAXPRINCLEN ? "..." : "";
+	*len = *len > MAXPRINCLEN ? MAXPRINCLEN : *len;

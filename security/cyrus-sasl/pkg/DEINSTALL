#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.3 2000/12/11 09:10:24 jlam Exp $

PKGNAME=$1
STAGE=$2

USER="@CYRUS_USER@"
GROUP="@CYRUS_GROUP@"

CAT="@CAT@"
RM="@RM@"

SASLDB=/etc/sasldb.db
PWCHECKDIR=/var/pwcheck

case ${STAGE} in
DEINSTALL)
	;;

POST-DEINSTALL)
	${RM} -rf ${PWCHECKDIR}
	${CAT} << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want
to remove:

  * the \`${USER}' user

  * the \`${GROUP}' group

  * the following files:

	${SASLDB}
===========================================================================
EOF
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0

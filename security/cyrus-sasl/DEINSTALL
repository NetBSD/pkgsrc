#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.8 2006/04/13 21:32:40 wiz Exp $

SASLDB=@PKG_SYSCONFDIR@/sasldb.db

case ${STAGE} in
POST-DEINSTALL)
	if [ -f ${SASLDB} ]; then
		${CAT} << EOF
===========================================================================
You may want to remove the SASL password data file:

	${SASLDB}
===========================================================================
EOF
	fi
	;;
esac

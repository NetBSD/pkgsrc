 TOOLMAN = $(TOOLDIR)/$(DISTTOOLMAN)
 
-SECUREDIR = /lib/security
-SBINDIR = /sbin
-MANDIR = /share/man
-DESTDIR = /usr/local
+SECUREDIR = ${PREFIX}/lib/security
+SBINDIR = ${PREFIX}/sbin
+MANDIR = ${PREFIX}/$(PKGMANDIR)
+#DESTDIR = /usr/local
 
 LIB_OBJS = $(LIBDIR)/pam_af.o $(LIBDIR)/subr.o
 TOOL_OBJS = $(TOOLDIR)/pam_af_tool.o $(TOOLDIR)/subr.o
 

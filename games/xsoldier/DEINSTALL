#!/bin/sh
#
# $NetBSD: DEINSTALL,v 1.1 2001/11/01 00:58:01 zuntum Exp $

PKGNAME=$1
STAGE=$2

CAT="@CAT@"
CMP="@CMP@"
ECHO="@ECHO@"
RM="@RM@"

SCOREDISTDIR=${PKG_PREFIX}/share/xsoldier
SCOREDIR=/var/games

SCOREFILES="	${SCOREDISTDIR}/xsoldier.score.dist ${SCOREDIR}/xsoldier"

case ${STAGE} in
DEINSTALL)
	# Remove score files if they don't differ from the default
	# score files.
	#
	${ECHO} ${SCOREFILES} | while read SAMPLEFILE FILE
	do
		if ${CMP} -s ${FILE} ${SAMPLEFILE}
		then
			${RM} -f ${FILE}
		fi
	done
	;;

POST-DEINSTALL)
	modified_files=''
	for FILE in ${SCOREFILES}
	do
		if [ -f ${FILE} ]
		then
			modified_files="${modified_files} ${FILE}"
		fi
	done

	if [ -n "${modified_files}" ]
	then
		${CAT} << EOF
===========================================================================
If you won't be using ${PKGNAME} any longer, you may want to remove:
EOF
		if [ -n "${modified_files}" ]
		then
			${CAT} << EOF

  * the following files:

EOF
			for file in ${modified_files}
			do
				echo "	${file}"
			done
		fi
		${CAT} << EOF
===========================================================================
EOF
	fi
	;;

*)
	echo "Unexpected argument: ${STAGE}"
	exit 1
	;;
esac
exit 0

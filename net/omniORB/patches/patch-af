+  /* Daemonize part 1: Close all file descriptors */
+  devnull = open("/dev/null", O_RDWR);
+  if (devnull == -1)
+  {
+    perror("/dev/null");
+    exit(EXIT_FAILURE);
+  }
+
+  close(STDIN_FILENO);
+  if (dup2(devnull, STDIN_FILENO) == -1)
+  {
+    perror("dup2 (STDIN)");
+    exit(EXIT_FAILURE);

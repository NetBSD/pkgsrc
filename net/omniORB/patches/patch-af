+  if (dup2(devnull, STDOUT_FILENO) == -1)
+  {
+    perror("dup2 (STDOUT)");
+    exit(EXIT_FAILURE);
+  }
+
+  close(STDERR_FILENO);
+  if (dup2(devnull, STDERR_FILENO) == -1)
+  {
+    perror("dup2 (STDERR)");
+    exit(EXIT_FAILURE);
+  }
+
+  /* Daemonize part 1: Close all file descriptors */
+  proc = fork();
+  if (proc == -1)
+  {
+    perror("fork");
+    exit(EXIT_FAILURE);
+  }
+  else if (proc != 0)
+  {
+    /* Parent process */
+    exit(EXIT_SUCCESS);
+  }

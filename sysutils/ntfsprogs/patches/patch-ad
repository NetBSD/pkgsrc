 void __Dputs(const char *s)
 {
 	int eo = errno;
-	fprintf(stderr, "%s\n", s);
+
+	if (!ntfs_err_out)
+		return;
+	fprintf(ntfs_err_out, "%s\n", s);
+	fflush(ntfs_err_out);
 	errno = eo;
 }
 
 void __Dperror(const char *s)
 {
 	int eo = errno;
-	perror(s);
+
+	if (!ntfs_err_out)
+		return;
+	if (s && s[0]) {
+		fprintf(ntfs_err_out, "%s: %s\n", s, strerror(eo));
+	} else {
+		fprintf(ntfs_err_out, "%s\n", strerror(eo));
+	}
+	fflush(ntfs_err_out);
 	errno = eo;
 }
 

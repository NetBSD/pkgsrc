+#xennet0: flags=8863<UP,BROADCAST,NOTRAILERS,RUNNING,SIMPLEX,MULTICAST> mtu 1500
+#	capabilities=2800<TCP4CSUM_Tx,UDP4CSUM_Tx>
+#	enabled=0
+#	address: 0e:7e:86:20:7b:82

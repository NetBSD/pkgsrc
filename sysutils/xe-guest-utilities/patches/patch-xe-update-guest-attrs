+#	inet alias 10.20.30.40 netmask 0xffffff00 broadcast 10.20.30.255
+#	inet6 fe80::c7e:86ff:fe20:7b82%xennet0 prefixlen 64 scopeid 0x1
+#lo0: flags=8049<UP,LOOPBACK,RUNNING,MULTICAST> mtu 33184

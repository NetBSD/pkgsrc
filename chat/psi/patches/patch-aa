+	// check if gnupg version is 1.2.3 or below
 	for(; it != lines.end(); ++it) {
-		if((*it).at(0) == '-')
-			break;
+	   if((*it).at(0) == '-') {
+	      ver = 1;
+	      break;
+	   }

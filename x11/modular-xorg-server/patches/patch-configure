 	;;
-  arm*)
+  *arm*|aarch64*)
 	ARM_VIDEO=yes
 	DEFAULT_INT10="stub"
 	;;
@@ -23023,7 +23023,7 @@ $as_echo "#define USE_DEV_IO 1" >>confde

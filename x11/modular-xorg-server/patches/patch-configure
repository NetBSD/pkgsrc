  ;;
 		*netbsd*)
-printf "%s\n" "#define USE_I386_IOPL 1" >>confdefs.h
+printf "%s\n" "#define USE_AMD64_IOPL 1" >>confdefs.h
+
 
 				SYS_LIBS=-lx86_64
